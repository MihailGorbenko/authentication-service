{
  "name": "authentication-service",
  "version": "1.0.0",
  "description": "authentication service",
  "main": "app.ts",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register 'tests/**/*.test.ts' --timeout 20000 --exit",
    "dev": " nodemon",
    "docker:build": "docker build -t mihago/authentication-service .",
    "build": "run-s compile docker:build",
    "build:test": "run-s test compile docker:build",
    "docker:push": "docker push mihago/authentication-service:latest",
    "docker:publish": "run-s build:test docker:push",
    "compile": "tsc",
    "run": "cross-env NODE_ENV=production node ./dist/run.js",
    "start": "run-s compile run"
  },
  "author": "Miha Go",
  "license": "ISC",
